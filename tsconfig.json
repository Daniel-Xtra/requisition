{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "pretty": true,
        "noUnusedLocals": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ],

}